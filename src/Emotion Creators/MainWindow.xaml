        <Image 
            x:Name="Norwegian" 
            HorizontalAlignment="Left" 
            Height="23.625" 
            Width="24.059" 
            Margin="520.392,529.375,0,0" 
            VerticalAlignment="Top" 
            Source="images/Flags/norway.png" 
            MouseLeftButtonDown="langNorwegian" 
            Stretch="UniformToFill"/>
    </Grid>
</windows:Window>
